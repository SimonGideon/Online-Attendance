<div id="<%= dom_id lecturer %>">
<div class="card-body d-flex flex-column gap-3">
<div class="d-flex flex-column flex-md-row flex-lg-row gap-md-5">
  <div class="flex-fill">
    <p>Name:</p>
    <div class="border p-2">
        <%= lecturer.name %>
    </div>
  </div>

  <div class="flex-fill">
    <p>Service number:</p>
    <div class="border p-2">
        <%= lecturer.service_number %>
    </div>
    </div>
</div>
<div class="d-flex flex-column flex-md-row flex-lg-row gap-md-5">
  <div class="flex-fill">
    <p>Phone:</p>
    <div class="border p-2">
        <%= lecturer.phone %>
    </div>
  </div>

  <div class="flex-fill">
    <p>Email</p>
    <div class="border p-2">
        <%= lecturer.work_email %>
    </div>
    </div>
</div>
</div>
</div>
